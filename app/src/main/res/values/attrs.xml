<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="IconTextView">
    <attr name="iconType">
      <enum name="material" value="0" />
      <enum name="ss_kickstarter" value="1" />
    </attr>
  </declare-styleable>

  <declare-styleable name="CommentComposerView">
    <attr name="composer_hint" format="string" />
    <attr name="composer_action_title" format="string" />
    <attr name="composer_disabled" format="boolean" />
    <attr name="composer_avatar_url" format="string" />
    <attr name="composer_action_button_gone" format="boolean" />
  </declare-styleable>

  <declare-styleable name="CommentCardView">
    <attr name="comment_card_status" format="integer"  />
    <attr name="comment_card_user_name" format="string" />
    <attr name="comment_card_post_time" format="string" />
    <attr name="comment_card_message" format="string" />
    <attr name="comment_card_replies" format="integer" />
    <attr name="comment_card_avatar_url" format="string" />
    <attr name="is_comment_reply_button_visible" format="boolean" />
    <attr name="is_comment_you_badge_visible" format="integer" />
    <attr name="is_comment_owner_badge_visible" format="integer" />
    <attr name="is_comment_superbacker_badge_visible" format="integer"/>
  </declare-styleable>

  <declare-styleable name="AddOnTagComponent">
    <attr name="add_on_tag_text" format="string" />
  </declare-styleable>

  <declare-styleable name="AddOnCardComponent">
    <attr name="add_on_description_text" format="string"/>
    <attr name="add_on_title_text" format="string"/>
    <attr name="add_on_description_visibility" format="boolean"/>
    <attr name="add_on_items_container_visibility" format="boolean"/>
    <attr name="add_on_minimum_text" format="string"/>
    <attr name="add_on_divider_visibility" format="string"/>
    <attr name="add_on_shipping_amount_text" format="string"/>
    <attr name="add_on_shipping_amount_visibility" format="boolean"/>
    <attr name="add_on_conversion_text" format="string"/>
    <attr name="add_on_conversion_visibility" format="boolean"/>
    <attr name="add_on_time_left_text" format="string"/>
    <attr name="add_on_time_left_visibility" format="boolean"/>
    <attr name="pills_container_visibility" format="boolean"/>
    <attr name="add_on_quantity_remaining_text" format="string"/>
    <attr name="add_on_quantity_remaining_visibility" format="boolean"/>
    <attr name="add_on_backer_limit_pill_text" format="string"/>
    <attr name="add_on_backer_limit_pill_visibility" format="boolean"/>
    <attr name="initial_state_add_on_visibility" format="boolean"/>
    <attr name="add_on_stepper_initial_value" format="integer"/>
    <attr name="add_on_stepper_max" format="integer"/>
    <attr name="add_on_local_pickup_is_gone" format="boolean"/>
  </declare-styleable>

  <declare-styleable name="FrequentlyAskedQuestionCard">
    <attr name="frequently_asked_question_text" format="reference|string" />
    <attr name="frequently_asked_answer_text" format="reference|string" />
    <attr name="frequently_asked_question_update_date_text" format="reference|string" />
  </declare-styleable>

  <declare-styleable name="EnvironmentalCommitmentsCard">
    <attr name="category_title" format="reference|string" />
    <attr name="description" format="reference|string" />
  </declare-styleable>

</resources>
